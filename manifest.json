{
  "name": "@deskpro-apps/docusign",
  "title": "Docusign",
  "description": "Send, sign and manage documents digitally, reduce paper waste, and improve the efficiency of your business processes with Docusign.",
  "version": "0.0.21",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedDocusignUsers": {
      "entity": "person",
      "type": "external_id",
      "title": "Docusign User"
    }
  },
  "settings": {
    "warning_page": {
      "title": "",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/warning" },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 10
    },
    "use_advanced_connect": {
      "title": "Advanced Connect",
      "description": "Follow the setup guide and use your credentials to connect the app to Deskpro.",
      "type": "boolean",
      "default": false,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 20
    },
    "integration_key": {
      "title": "Integration Key",
      "description": "Integration Key can be obtained by following our setup guide",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_advanced_connect != false",
      "order": 30
    },
    "secret_key": {
      "title": "Secret Key",
      "description": "Secret Key can be obtained by following our setup guide",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_advanced_connect != false",
      "order": 40
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback", "height": "80px" },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_advanced_connect != false",
      "order": 50
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://account-d.docusign.com/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      },
      {
        "url": "https://demo.docusign.net/.*",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
        "timeout": 20
      }
    ]
  }
}
